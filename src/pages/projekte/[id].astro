---
import { getCollection, getEntry, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { formatTimeframe } from "../../utils/date";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { id: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

// Extrahiere die ersten 160 Zeichen des Contents fÃ¼r die Meta Description
const contentRaw = project.body || "";
const plainText = contentRaw
  .replace(/---[\s\S]*?---/, "")
  .replace(/[#*`\[\]]/g, "")
  .trim();
const metaDescription =
  project.data.description ||
  plainText.substring(0, 160).trim() + (plainText.length > 160 ? "..." : "");

// Verwende Technologies als Keywords
const keywords = project.data.technologies?.join(", ") || "";
---

<Layout
  title={`alexander - ${project.data.title}`}
  description={metaDescription || "alexander - full stack developer"}
  keywords={keywords}
>
  <h1 class="text-xl font-bold mb-2">{project.data.title}</h1>
  <div class="mb-4">
    <p>
      <span class="font-bold">Zeitraum:&nbsp;</span>
      {formatTimeframe({ start: project.data.start, end: project.data.end })}
    </p>
    <p>
      <span class="font-bold">Tech Stack:&nbsp;</span>
      {project.data.technologies.join(" -  ")}
    </p>
  </div>
  <div
    class="prose dark:prose-invert prose-h1:text-xl prose-h1:font-bold prose-h1:mb-2 mb-4"
  >
    <Content />
  </div>
  {
    project.data.links.length > 0 && (
      <>
        <h2 class="text-lg font-bold mb-2">Weitere Links</h2>
        <ul class="list-disc list-inside mb-4">
          {project.data.links.map((link) => (
            <li>
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-red-800 dark:text-white dark:hover:text-red-800"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </>
    )
  }
</Layout>
