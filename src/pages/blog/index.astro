---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("posts");
const sortedPosts = [...posts].sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});
---

<Layout
  title="alexander - Blog"
  description="Technische Blog-Beiträge über React Native, Mobile Development, Testing mit Maestro und moderne Webentwicklung. Praxisorientierte Tutorials und Erfahrungen."
  keywords="Blog, React Native, Mobile Development, Maestro Testing, Web Development, Tutorials"
>
  <h1 class="text-xl font-bold mb-4">
    Technische Blog-Beiträge zu Web & Mobile Development
  </h1>
  {
    sortedPosts.map((post) => (
      <div class="mb-4">
        <h2 class="font-bold text-lg">{post.data.title}</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
          {new Date(post.data.date).toLocaleDateString("de-DE", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </p>

        <a
          href={`/blog/${post.slug}`}
          class="link"
          aria-label={`${post.data.title} - Mehr lesen`}
        >
          Mehr lesen
        </a>
      </div>
    ))
  }
</Layout>
