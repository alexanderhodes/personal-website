---
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import ThemeToggle from "../components/ThemeToggle";
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  description: string;
  language: string;
}

const { title, description, language } = Astro.props;
---

<html lang={language}>
  <head>
    <BaseHead description={description} title={title} />
  </head>
  <body
    class="flex flex-col min-h-screen max-w-screen-lg mx-auto py-4 px-4 dark:bg-black dark:text-white"
  >
    <div class="flex justify-between items-end mb-3">
      <a
        href="/"
        class="font-bold text-2xl hover:underline decoration-2 underline-offset-2 hover:text-red-500"
        >Home</a
      >
      <div class="flex items-center">
        <a
          href="/projekte"
          class="hover:underline decoration-2 underline-offset-2 hover:text-red-500 mr-4"
          >Projekte</a
        >
        <ThemeToggle client:only>
          <Icon name="feather:sun" class="w-6 h-6 dark:text-white" />
        </ThemeToggle>
      </div>
    </div>
    <slot />
    <Footer />
  </body>
</html>
