---
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";

export interface Props {
  title: string;
  description: string;
  language: string;
}

const { title, description, language } = Astro.props;
---

<html lang={language}>
  <head>
    <BaseHead description={description} title={title} />
  </head>
  <body class="flex flex-col min-h-screen max-w-screen-lg mx-auto py-4">
    <div class="flex justify-between items-end mb-3">
      <a
        href="/"
        class="font-bold text-2xl hover:underline decoration-2 underline-offset-2 hover:text-red-500"
        >Home</a
      >
      <a
        href="/projekte"
        class="hover:underline decoration-2 underline-offset-2 hover:text-red-500"
        >Projekte</a
      >
    </div>
    <slot />
    <Footer />
  </body>
</html>
